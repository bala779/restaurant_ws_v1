<?xml version="1.0"?>
<robot name="food_bot">

  <!-- ================== BASE ================== -->
  <link name="base_link">
    <visual>
      <geometry><box size="0.5 0.5 0.125"/></geometry>
      <origin xyz="0 0 0.1425"/>
      <material name="gray"><color rgba="0.6 0.6 0.6 1.0"/></material>
    </visual>
    <collision>
      <geometry><box size="0.5 0.5 0.125"/></geometry>
      <origin xyz="0 0 0.1425"/>
    </collision>
    <inertial>
      <mass value="10"/>
      <inertia ixx="1" iyy="1" izz="1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- ================== FRONT LEFT WHEEL (DRIVE) ================== -->
  <link name="front_left_wheel">
    <visual>
      <geometry><cylinder radius="0.08" length="0.04"/></geometry>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.08" length="0.04"/></geometry>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
    </collision>
  </link>

  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.15 0.15 0.08"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- ================== FRONT RIGHT WHEEL (DRIVE) ================== -->
  <link name="front_right_wheel">
    <visual>
      <geometry><cylinder radius="0.08" length="0.04"/></geometry>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.08" length="0.04"/></geometry>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
    </collision>
  </link>

  <joint name="front_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.15 -0.15 0.08"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- ================== REAR LEFT WHEEL (STEER + ROLL) ================== -->
  <link name="rear_left_steer"/>
  <joint name="rear_left_steer_joint" type="revolute">
    <parent link="base_link"/>
    <child link="rear_left_steer"/>
    <origin xyz="-0.15 0.15 0.08"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.52" upper="0.52" effort="10" velocity="1"/>
  </joint>

  <link name="rear_left_wheel">
    <visual>
      <geometry><cylinder radius="0.08" length="0.04"/></geometry>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.08" length="0.04"/></geometry>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
    </collision>
  </link>

  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="rear_left_steer"/>
    <child link="rear_left_wheel"/>
    <origin xyz="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- ================== REAR RIGHT WHEEL (STEER + ROLL) ================== -->
  <link name="rear_right_steer"/>
  <joint name="rear_right_steer_joint" type="revolute">
    <parent link="base_link"/>
    <child link="rear_right_steer"/>
    <origin xyz="-0.15 -0.15 0.08"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.52" upper="0.52" effort="10" velocity="1"/>
  </joint>

  <link name="rear_right_wheel">
    <visual>
      <geometry><cylinder radius="0.08" length="0.04"/></geometry>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.08" length="0.04"/></geometry>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
    </collision>
  </link>

  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="rear_right_steer"/>
    <child link="rear_right_wheel"/>
    <origin xyz="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- ================== ros2_control ================== -->
  <ros2_control name="controllers" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>

    <!-- Front wheels drive -->
    <joint name="front_left_wheel_joint">
      <command_interface name="velocity"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="front_right_wheel_joint">
      <command_interface name="velocity"/>
      <state_interface name="velocity"/>
    </joint>

    <!-- Rear wheels steering -->
    <joint name="rear_left_steer_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>
    <joint name="rear_right_steer_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>
  </ros2_control>


  <!-- ================== TRAY SUPPORT STICK ================== -->
  <!-- Base top is at z=+0.15; stick length 0.5; tray sits on stick top -->
  <link name="tray_stick_link">
    <visual>
      <geometry><cylinder length="0.5" radius="0.03"/></geometry>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <material name="gray"><color rgba="0.6 0.6 0.6 1.0"/></material>
    </visual>
    <collision>
      <geometry><cylinder length="0.5" radius="0.03"/></geometry>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.002" iyy="0.002" izz="0.002" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  <joint name="tray_stick_joint" type="fixed">
    <parent link="base_link"/>
    <child link="tray_stick_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </joint>

  <!-- ================== TRAY ================== -->
  <link name="tray_link">
    <visual>
      <geometry><box size="0.6 0.6 0.02"/></geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="gray"><color rgba="0.6 0.6 0.6 1.0"/></material>
    </visual>
    <collision>
      <geometry><box size="0.6 0.6 0.02"/></geometry>
      <origin xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="2"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  <joint name="tray_joint" type="fixed">
    <parent link="tray_stick_link"/>
    <child link="tray_link"/>
    <origin xyz="0 0 0.5" rpy="0 0 0"/>
  </joint>

  <!-- Mount cube -->
  <!-- <link name="lidar_mount_link">
    <visual>
      <geometry>
        <box>
          <size>0.05 0.05 0.05</size>
        </box>
      </geometry>
      <material>
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
  </link>

  <joint name="lidar_mount_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_mount_link"/>
    <origin xyz="0.2 0 0.45" rpy="0 0 0"/> 
  </joint> -->

  <link name="lidar_link">
    <visual>
      <geometry><cylinder length="0.05" radius="0.05"/></geometry>
      <origin xyz="0 0 0"/>
      <material name="gray"><color rgba="0.6 0.6 0.6 1.0"/></material>
    </visual>
    <collision>
      <geometry><cylinder length="0.05" radius="0.05"/></geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.001" iyy="0.001" izz="0.001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
  </joint>

  <!-- Friction on all wheels -->
  <!-- <gazebo reference="front_left_wheel"><mu1>1.0</mu1><mu2>1.0</mu2></gazebo>
  <gazebo reference="front_right_wheel"><mu1>1.0</mu1><mu2>1.0</mu2></gazebo> -->
  <gazebo reference="rear_left_wheel"><mu1>1.0</mu1><mu2>1.0</mu2></gazebo>
  <gazebo reference="rear_right_wheel"><mu1>1.0</mu1><mu2>1.0</mu2></gazebo>

  <!-- ================== GAZEBO: LIDAR ================== -->
  <!-- LIDAR Sensor Plugin -->
  <gazebo reference="lidar_link">
    <sensor type="ray" name="lidar">
      <pose>0 0 0 0 0 0</pose>
      <visualize>false</visualize>
      <always_on>true</always_on>
      <update_rate>5</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-3.14159</min_angle>
            <max_angle>3.14159</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.12</min>
          <max>12.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_laser" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <remapping>~/out:=scan</remapping>
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
        <frame_name>lidar_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

</robot>
