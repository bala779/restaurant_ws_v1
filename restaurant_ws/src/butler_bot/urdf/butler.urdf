<!-- ================= FRONT LEFT WHEEL ================= -->
<link name="front_left_wheel">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <cylinder radius="0.08" length="0.04"/>
    </geometry>
    <material name="black"/>
  </visual>
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <cylinder radius="0.08" length="0.04"/>
    </geometry>
  </collision>
  <inertial>
    <mass value="0.5"/>
    <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
  </inertial>
</link>

<!-- Steering joint (yaw) -->
<joint name="front_left_steering_joint" type="revolute">
  <parent link="base_link"/>
  <child link="front_left_wheel"/>
  <origin xyz="0.3 0.2 0.05" rpy="0 0 0"/>
  <axis xyz="0 0 1"/>
  <limit lower="-0.6" upper="0.6" effort="20" velocity="1.0"/>
</joint>

<!-- Rolling joint (wheel rotation) -->
<joint name="front_left_wheel_roll_joint" type="continuous">
  <parent link="front_left_wheel"/>
  <child link="front_left_wheel"/> <!-- rotate the same wheel link -->
  <origin xyz="0 0 0" rpy="0 1.5708 0"/>
  <axis xyz="0 1 0"/>
</joint>

<!-- ================= FRONT RIGHT WHEEL ================= -->
<link name="front_right_wheel">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <cylinder radius="0.08" length="0.04"/>
    </geometry>
    <material name="black"/>
  </visual>
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <cylinder radius="0.08" length="0.04"/>
    </geometry>
  </collision>
  <inertial>
    <mass value="0.5"/>
    <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
  </inertial>
</link>

<!-- Steering joint -->
<joint name="front_right_steering_joint" type="revolute">
  <parent link="base_link"/>
  <child link="front_right_wheel"/>
  <origin xyz="0.3 -0.2 0.05" rpy="0 0 0"/>
  <axis xyz="0 0 1"/>
  <limit lower="-0.6" upper="0.6" effort="20" velocity="1.0"/>
</joint>

<!-- Rolling joint (wheel rotation) -->
<joint name="front_right_wheel_roll_joint" type="continuous">
  <parent link="front_right_wheel"/>
  <child link="front_right_wheel"/> <!-- rotate the same wheel link -->
  <origin xyz="0 0 0" rpy="0 1.5708 0"/>
  <axis xyz="0 1 0"/>
</joint>



  <!-- ================== TRAY POST + TRAY (optional visuals) ================== -->
  <link name="tray_post">
    <visual>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <geometry><cylinder radius="0.03" length="0.5"/></geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <geometry><cylinder radius="0.03" length="0.5"/></geometry>
    </collision>  
    <inertial>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.003" ixy="0.0" ixz="0.0"
               iyy="0.003" iyz="0.0" izz="0.003"/>
    </inertial>
  </link>
  <joint name="tray_post_joint" type="fixed">
    <parent link="base_link"/>
    <child link="tray_post"/>
    <origin xyz="0 0 0.20" rpy="0 0 0"/>
  </joint>

  <link name="tray_link">
    <visual>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <geometry><box size="0.40 0.30 0.04"/></geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <geometry><box size="0.40 0.30 0.04"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <mass value="0.8"/>
      <inertia ixx="0.004" ixy="0.0" ixz="0.0"
               iyy="0.006" iyz="0.0" izz="0.009"/>
    </inertial>
  </link>
  <joint name="tray_joint" type="fixed">
    <parent link="tray_post"/>
    <child link="tray_link"/>
    <origin xyz="0 0 0.50" rpy="0 0 0"/>
  </joint>

  <!-- ================== LIDAR (simple 2D) ================== -->
  <link name="lidar_link">
    <visual>
      <origin xyz="0.20 0 0.22" rpy="0 0 0"/>
      <geometry><cylinder radius="0.05" length="0.05"/></geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0.20 0 0.22" rpy="0 0 0"/>
      <geometry><cylinder radius="0.05" length="0.05"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0.20 0 0.22" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>
  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- ================== Gazebo Plugins & Params ================== -->
  <!-- Diff drive uses only the left/right wheel joints -->
  <gazebo>
    <plugin name="diff_drive" filename="libgazebo_ros_diff_drive.so">
      <ros>
        <namespace>/</namespace>
        <remapping>cmd_vel:=cmd_vel</remapping>
      </ros>
      <update_rate>30</update_rate>
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.34</wheel_separation>   <!-- 0.17 - (-0.17) -->
      <wheel_diameter>0.16</wheel_diameter>       <!-- 2 * 0.08 -->
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_link</robot_base_frame>
      <command_timeout>1.0</command_timeout>
    </plugin>
  </gazebo>

  <!-- Give the caster a bit more grip; keep wheels grippy too -->
  <gazebo reference="left_wheel_link"><mu1>1.0</mu1><mu2>1.0</mu2></gazebo>
  <gazebo reference="right_wheel_link"><mu1>1.0</mu1><mu2>1.0</mu2></gazebo>
  <gazebo reference="caster_link"><mu1>0.6</mu1><mu2>0.6</mu2></gazebo>

  <!-- Lidar sensor on lidar_link -->
  <gazebo reference="lidar_link">
    <sensor type="ray" name="lidar">
      <pose>0 0 0 0 0 0</pose>
      <visualize>false</visualize>
      <update_rate>10</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-3.14159</min_angle>
            <max_angle>3.14159</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.12</min>
          <max>12.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_laser" filename="libgazebo_ros_ray_sensor.so">
        <ros><remapping>~/out:=scan</remapping></ros>
        <output_type>sensor_msgs/LaserScan</output_type>
        <frame_name>lidar_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

</robot>
