<?xml version="1.0"?>
<robot name="three_wheel_bot">

  <!-- == Materials == -->
  <material name="blue"><color rgba="0.1 0.1 0.8 1"/></material>
  <material name="black"><color rgba="0 0 0 1"/></material>
  <material name="gray"><color rgba="0.6 0.6 0.6 1"/></material>

  <!-- =========================================================
       Root (no inertia) -> base_link (has inertia & geometry)
       This avoids robot_state_publisher root-inertia warnings
       ========================================================= -->
  <link name="base_footprint"/>
  <joint name="base_footprint_to_base_link" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- ================== BASE ================== -->
  <!-- Base frame at z=0. The chassis box is centered at z=0.10
       so its bottom is 0.05 m above ground. Wheels are at z=0.0 -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.10" rpy="0 0 0"/>
      <geometry><box size="0.6 0.4 0.20"/></geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.10" rpy="0 0 0"/>
      <geometry><box size="0.45 0.34 0.20"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.10" rpy="0 0 0"/>
      <mass value="8.0"/>
      <inertia ixx="0.20" ixy="0.0" ixz="0.0"
               iyy="0.22" iyz="0.0" izz="0.35"/>
    </inertial>
  </link>

  <!-- ================== DRIVE WHEELS (left/right) ================== -->
  <!-- Wheel radius = 0.08, thickness = 0.04
       Place joints at z=0 so wheel bottom touches ground (z=0 - 0.08) -->
  <link name="left_wheel_link">
    <visual>
      <!-- cylinder axis along Y: rotate +90deg about X -->
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry><cylinder radius="0.08" length="0.04"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry><cylinder radius="0.08" length="0.04"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0"
               iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
    <origin xyz="-0.2 0.21 0.00" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="right_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry><cylinder radius="0.08" length="0.04"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry><cylinder radius="0.08" length="0.04"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0"
               iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>
  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
    <origin xyz="-0.2 -0.21 0.00" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- ================== CASTER (passive) ================== -->
  <!-- Use a small sphere to approximate an omni casterâ€”stable & simple -->
  <!-- Passive Caster -->
  <!-- Passive caster (ball) -->
